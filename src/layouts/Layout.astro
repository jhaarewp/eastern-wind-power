---
import Header from '../components/LayoutComponents/Header.astro'
import ContactCTA from '../components/LayoutComponents/ContactCTA.astro'
import Footer from '../components/LayoutComponents/Footer.astro'

interface Props {
	title: string;
	description: string;
}

const { title } = Astro.props;
const { description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- Google fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Oswald:wght@200..700&display=swap" rel="stylesheet">

		

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	

	<body>
		<Header/>
		<slot />
		<ContactCTA />
		<Footer />
		
	</body>
</html>
<style is:global>
	:root {
		--white: #ffffff;
		--lightgrey: #f3f3f3;
		--black: #1B1A22;
		--brown: #BD5D37;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: "Lato", sans-serif;
		background-color: var(--white);
		font-weight: 400;
		color: var(--black);
	}

	h1,
	h2,
	h3,
	h4 {
		font-family: "Oswald", sans-serif;
		color: var(--black);
		font-weight: 400;
		line-height: 1;
		text-align: center;
	}

	@media (width >= 768px) {
		h2,
		h3,
		h4 {
			text-align: left;
		}
	}

	h1 {
		font-size: 35px;
		margin-bottom: 30px;
	}

	@media (width >= 768px) {
		h1 {
			font-size: 42px;
		}
	}

	h2 {
		font-size: 30px;
		margin-bottom: 25px;
	}

	@media (width >= 768px) {
		h2 {
			font-size: 32px;
		}
	}

	h3 {
		font-size: 26px;
		margin-bottom: 20px;
	}

	p {
		font-size: 18px;
		margin-bottom: 20px;
	}

	p:last-child {
		margin-bottom: 0;
	}

	.container {
		max-width: 1200px;
		width: 100%;
		margin: 0 auto;
		padding: 0 15px;
	}

	@media (width >= 1200px) {
		.container {
			padding: 0;
		}
	}

	.content-background {
		max-width: 900px;
		width: 100%;
		background-color: rgba(245 246 246 / 0.95);
        margin: 0 auto;
	}
</style>
