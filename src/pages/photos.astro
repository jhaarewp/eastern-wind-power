---
// import { Image } from "astro:assets";
import Layout from '../layouts/Layout.astro';
import 'swiper/css/bundle';
import slide1 from "../images/slide-1-wind-turbine-summer-sky.jpg";
import slide2 from "../images/slide-2-wind-turbine.jpg";
import slide3 from "../images/slide-3-wind-turbine-blue-sky-view.jpg";
import slide4 from "../images/slide-4-wind-turbine-blade-view.jpg";
import slide5 from "../images/slide-5-wind-turbine-full-view.jpg";
import slide6 from "../images/slide-6-wind-turbine-fin-view.jpg";
---

<Layout title="Eastern Wind Power" description="Photos and Videos of wind turbines from Eastern Wind Power">
	<main>
		<div class="container">
			<div class="content content-background">
				<div class="swiper">
					<div class="swiper-wrapper">
						<div class="swiper-slide"><img src={slide1.src} alt="Wind Turbine" width={800} /></div>
						<div class="swiper-slide"><img src={slide2.src} alt="Wind Turbine" width={800} /></div>
						<div class="swiper-slide"><img src={slide3.src} alt="Wind Turbine" width={800} /></div>
						<div class="swiper-slide"><img src={slide4.src} alt="Wind Turbine" width={800} /></div>
						<div class="swiper-slide"><img src={slide5.src} alt="Wind Turbine" width={800} /></div>
						<div class="swiper-slide"><img src={slide6.src} alt="Wind Turbine" width={800} /></div>
					</div>

					<div class="swiper-button-prev"></div>
					<div class="swiper-button-next"></div>
				</div>

				<script>
					import Swiper from 'swiper/bundle';
					const swiper = new Swiper('.swiper', {
						loop: true,
						navigation: {
							nextEl: '.swiper-button-next',
							prevEl: '.swiper-button-prev',
						},
					});
				</script>
			</div>
		</div>
	</main>
</Layout>

<style>
	.swiper {
		width: 100%;
		max-width: 800px;
		margin: 0 auto;
	}
</style>