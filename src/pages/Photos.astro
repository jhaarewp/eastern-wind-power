---
import Layout from '../layouts/Layout.astro';
import 'swiper/css/bundle';
import { Image } from "astro:assets";
import Slide1 from "../images/ImageSlide/slide-1-wind-turbine-summer-sky.jpg";
import Slide2 from "../images/ImageSlide/slide-2-wind-turbine.jpg";
import Slide3 from "../images/ImageSlide/slide-3-wind-turbine-blue-sky-view.jpg";
import Slide4 from "../images/ImageSlide/slide-4-wind-turbine-blade-view.jpg";
import Slide5 from "../images/ImageSlide/slide-5-wind-turbine-full-view.jpg";
---

<Layout title="Eastern Wind Power" description="Photos and Videos of wind turbines from Eastern Wind Power">
	<main>
		<div class="container">
			<div class="content content-background">
				<div class="swiper">
					<div class="swiper-wrapper">
						<div class="swiper-slide"><Image src={Slide1} alt="Wind Turbine" /></div>
						<div class="swiper-slide"><Image src={Slide2} alt="Wind Turbine" /></div>
						<div class="swiper-slide"><Image src={Slide3} alt="Wind Turbine" /></div>
						<div class="swiper-slide"><Image src={Slide4} alt="Wind Turbine" /></div>
						<div class="swiper-slide"><Image src={Slide5} alt="Wind Turbine" /></div>
					</div>

					<div class="swiper-button-prev"></div>
					<div class="swiper-button-next"></div>
				</div>

				<script>
					import Swiper from 'swiper/bundle';
					const swiper = new Swiper('.swiper', {
						loop: true,
						navigation: {
							nextEl: '.swiper-button-next',
							prevEl: '.swiper-button-prev',
						},
					});
				</script>
			</div>
		</div>
	</main>
</Layout>